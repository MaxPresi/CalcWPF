<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculadora WPF+XAML" Height="525" Width="350" Icon="/calcular.png" Background="#FF1F1F1F">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Label Content=""
               x:Name="ContaLbl"
               HorizontalAlignment="Right" 
               VerticalAlignment="Bottom"
               Grid.Column="0"
               Grid.Row="0"
               Grid.ColumnSpan="4"
               />

        <Label Content="0" 
               x:Name="resultLb"
               HorizontalAlignment="Right" 
               VerticalAlignment="Center"
               FontSize="60" 
               Grid.Column="0"
               Grid.Row="1"
               Grid.ColumnSpan="4"/>
        <Button Content="AC" 
                x:Name="ACBtn"
                Click="ACBtn_Click"
                Background="{StaticResource outBack}"
                Foreground="{StaticResource outFore}"
                Grid.Row="2"/>

        <Button Content="±"
                x:Name="NegBtn"
                Click="NegBtn_Click"
                Background="{StaticResource outBack}"
                Foreground="{StaticResource outFore}"
                Grid.Row="2"
                Grid.Column="1"/>

        <Button Content="%"
                x:Name="PCentBtn"
                Click="PCentBtn_Click"
                Background="{StaticResource outBack}"
                Foreground="{StaticResource outFore}"
                Grid.Row="2"
                Grid.Column="2"/>

        <Button Content="÷"
                x:Name="DivBtn"
                Click="ContaBtn_Click"
                Background="{StaticResource contBack}"
                Foreground="{StaticResource contFore}"
                Grid.Row="2"
                Grid.Column="3"/>

        <Button Content="7"
                x:Name="SeteBtn"
                Click="NumBtn_Click"
                Grid.Row="3"
                Grid.Column="0"/>

        <Button Content="8"
                x:Name="OitoBtn"
                Click="NumBtn_Click"
                Grid.Row="3"
                Grid.Column="1"/>

        <Button Content="9"
                x:Name="NoveBtn"
                Click="NumBtn_Click"
                Grid.Row="3"
                Grid.Column="2"/>

        <Button Content="x"
                x:Name="MultiBtn"
                Click="ContaBtn_Click"
                Background="{StaticResource contBack}"
                Foreground="{StaticResource contFore}"
                Grid.Row="3"
                Grid.Column="3"/>

        <Button Content="4"
                x:Name="QuatroBtn"
                Click="NumBtn_Click"
                Grid.Row="4"
                Grid.Column="0"/>

        <Button Content="5"
                x:Name="CincoBtn"
                Click="NumBtn_Click"
                Grid.Row="4"
                Grid.Column="1"/>

        <Button Content="6"
                x:Name="SeisBtn"
                Click="NumBtn_Click"
                Grid.Row="4"
                Grid.Column="2"/>

        <Button Content="-"
                x:Name="MenosBtn"
                Click="ContaBtn_Click"
                Background="{StaticResource contBack}"
                Foreground="{StaticResource contFore}"
                Grid.Row="4"
                Grid.Column="3"/>

        <Button Content="1"
                x:Name="UmBtn"
                Click="NumBtn_Click"
                Grid.Row="5"
                Grid.Column="0"/>

        <Button Content="2"
                x:Name="DoisBtn"
                Click="NumBtn_Click"
                Grid.Row="5"
                Grid.Column="1"/>

        <Button Content="3"
                x:Name="TresBtn"
                Click="NumBtn_Click"
                Grid.Row="5"
                Grid.Column="2"/>

        <Button Content="+"
                x:Name="SomaBtn"
                Click="ContaBtn_Click"
                Background="{StaticResource contBack}"
                Foreground="{StaticResource contFore}"
                Grid.Row="5"
                Grid.Column="3"/>

        <Button Content="0"
                x:Name="ZeroBtn"
                Click="NumBtn_Click"
                Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>

        <Button Content=","
                x:Name="DecBtn"
                Click="DecBtn_Click"
                Grid.Row="6"
                Grid.Column="2"/>

        <Button Content="="
                x:Name="IgualBtn"
                Click="IgualBtn_Click"
                Background="{StaticResource contBack}"
                Foreground="{StaticResource contFore}"
                Grid.Row="6"
                Grid.Column="3"/>

    </Grid>
</Window>
